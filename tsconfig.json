{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["ES6", "ES2015", "ES7", "ES2016", "ES2017", "ES2018", "dom"],
    "baseUrl": "src"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}